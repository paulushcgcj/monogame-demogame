{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Run on Desktop",
          "command": "dotnet",
          "type": "process",
          "args": [
              "build",
              "${workspaceFolder}/DemoGame/DemoGame.csproj"
          ],
          "problemMatcher": "$msCompile"
      },
      {
        "label": "Publish Windows",
        "type": "shell",
        "command": "dotnet",
        "args": [
            "publish",
            "-c",
            "Release",
            "-r",
            "win-x64",
            "/p:PublishReadyToRun=false",
            "/p:TieredCompilation=false",
            "--self-contained"
        ],
        "problemMatcher": "$msCompile"
    },
    {
      "label": "Publish Linux",
      "type": "shell",
      "command": "dotnet",
      "args": [
          "publish",
          "-c",
          "Release",
          "-r",
          "linux-x64",
          "/p:PublishReadyToRun=false",
          "/p:TieredCompilation=false",
          "--self-contained"
      ],
      "problemMatcher": "$msCompile"
  }
  ]
}